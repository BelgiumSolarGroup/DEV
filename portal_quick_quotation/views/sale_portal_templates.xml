<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="portal_layout_custome_quotation" name="Portal layout: Sale Quotation menu entry" inherit_id="portal.portal_breadcrumbs" priority="40">
        <xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
            <li t-if="page_name == 'create_new_quotation' or quote" t-attf-class="breadcrumb-item #{'active ' if not quote else ''}">
                <a t-attf-href="/my/quotes?{{ keep_query() }}">Quotations</a>
                <li class="breadcrumb-item">
                    <span>Create New Quotation</span>
                </li>
            </li>
        </xpath>
    </template>

    <template id="portal_my_tasks_custome" inherit_id="sale.portal_my_quotations" name="My Projects">
        <xpath expr="//t[@t-call='portal.portal_searchbar']" position="inside">
            <t t-if="env.user.has_group('base.group_portal')">
                <div class="form-inline ml-lg-4 pl2" style="margin-left: 8px; margin-right: 8px;">
                    <button class="btn btn-primary"  name='create_new_quotation' title="Create New Quotation"
                        onclick="location.href='/my/quotes/create_new'">
                        <i class="fa fa-plus"/> Create New Quotation
                    </button>
                </div>
            </t>
        </xpath>
    </template>

    <template id="create_new_quotation" name="Create New Quotation">
        <t t-call="portal.portal_layout">
            <t t-call="portal.portal_record_layout">
                <t t-set="card_body">
                    <div id="wrap" class="oe_structure oe_empty create_new_quotation">
                        <section class="s_title parallax s_parallax_is_fixed bg-black-50 pt24 pb24" data-vcss="001" data-snippet="s_title" data-scroll-background-ratio="1">
                            <span class="s_parallax_bg oe_img_bg" style="background-image: url('/web/image/website.s_banner_default_image'); background-position: 50% 0;"/>
                            <div class="o_we_bg_filter bg-black-50"/>
                            <div class="container" style="margin-left:10px;">
                                <h1>New Quotation</h1>
                            </div>
                        </section>
                        <section class="s_text_block pt40 pb40 o_portal_quick_quotation " data-snippet="s_text_block">
                            <t t-set="logged_partner" t-value="logged_partner"/>
                            <div class="container s_allow_columns">
                                <div class="row">
                                    <div class="col-lg-12 mt-4 mt-lg-0">
                                        <section class="pt8 pb8">
                                            <div class="container">
                                                <div class="row">
                                                    <div class="col-sm-4">
                                                        <div class="form-group">
                                                            <label class="font-weight-bold" for="name">Your Name</label>
                                                            <input id="name" name="name" class="form-control mb-2 input_name" autocomplete="off" 
                                                                required="required" t-att-value="logged_partner.name" disabled="disabled"/>
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-4">
                                                        <div class="form-group">
                                                            <label class="font-weight-bold" for="email">Your Email</label>
                                                            <input id="email" name="email" class="form-control mb-2 input_email" autocomplete="off" 
                                                                required="required" t-att-value="logged_partner.email" disabled="disabled"/>
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-4">
                                                        <div class="form-group">
                                                            <label class="font-weight-bold" for="salesperson">Select Salesperson</label>
                                                            <input type="text" class="form-control salesperson" id="salesperson" name="salesperson"/>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </section>
                                        <section class="pt8 pb8">
                                            <div class="container">
                                                <div class="table-responsive" style="overflow: visible;">
                                                    <div class="table-wrapper">
                                                    <div class="table-title">
                                                        <div class="row">
                                                            <div class="col-sm-4">
                                                                <h2>Add <b>Products</b>
                                                                </h2>
                                                            </div>
                                                            <div class="col-sm-4">
                                                                <div class="input-group">
                                                                    <input type="text" class="form-control search_prodcuts" placeholder="Search prodcuts"/>
                                                                    <div class="input-group-append">
                                                                        <button class="btn btn-primary" type="button">
                                                                            <i class="fa fa-search"></i>
                                                                        </button>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="col-sm-4">
                                                                    <button type="button" class="btn btn-primary add-new">
                                                                        <i class="fa fa-plus"></i> Add New
                                                                    </button>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <table class="table table-bordered table_quick_quotation" id="table_quick_quotation">
                                                            <thead>
                                                                <tr>
                                                                    <th>Sr.No</th>
                                                                    <th>Product</th>
                                                                    <th>Unit</th>
                                                                    <th>Quantity</th>
                                                                    <th>Actions</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>

                                                            </tbody>
                                                        </table>
                                                        <div class="row">
                                                            <div class="col-sm-8">
                                                            </div>
                                                            <div class="col-sm-4" style="text-align:right">
                                                                <button type="button" class="btn btn-primary submit">
                                                                    <i class="fa fa-sign-in"></i> Submit
                                                                </button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </section>
                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>
                </t>
            </t>
        </t>
    </template>
    
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
	
		<!-- Product Form View Inherited -->
		<record model="ir.ui.view" id="view_product_reservation_request_form_inherited">
			<field name="name">product.reservation.request.frm.inherited</field>
			<field name="model">product.template</field>    		
			<field name="inherit_id" ref="product.product_template_only_form_view"/>    		
			<field name="arch" type="xml">        					
				<xpath expr="//form/sheet/div[@name='options']" position="inside">
					<div>
						<field name="reserve_products"/>  
						<label for="reserve_products"/> 
					</div>
				</xpath>
			</field>                	
    	</record>

	</data>
</odoo>

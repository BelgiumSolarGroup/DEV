<?xml version="1.0"?>
<openerp>
    <data>
 
        <record id="view_reserved_qty_form" model="ir.ui.view">
            <field name="name">reserved.qty.form</field>
            <field name="model">sale.order.line</field>
            <field name="arch" type="xml">
                <form string="Sales Order Line">
                    <sheet>
                        <group>
                            <group>
                                <field name="product_id" invisible="1"/>
                                <field name="order_id"/>
                                <field name="order_partner_id"/>
                                <field name="name"/>
                                <field name="salesman_id"/>
                                <field name="price_unit"/>
                                <field name="price_tax"/>
                            </group>
                            <group>
                                <field name="state"/>
                                <field name="company_id"/>
                                <field name="product_uom_qty" string="Qty"/>
                                <field name="qty_delivered"/>
                                <field name="qty_invoiced"/>
                                <field name="qty_to_invoice"/>
                                <field name="product_uom" string="Unit of Measure" groups="product.group_uom"/>
                                <field name="product_uom_category_id" string="category"/>
                                <field name="price_subtotal" sum="Total" widget="monetary"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="action_reserved_qty" model="ir.actions.act_window">
            <field name="name">Reserved Qty </field>
            <field name="res_model">sale.order.line</field>
            <field name="type">ir.actions.act_window</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="sale.view_order_line_tree"/>
            <field name="domain" eval="[('state','=','avail')]"/>
            <field name="context" eval="'{\'search_default_product_id\': [active_id]}'"/>
        </record>

        <record id="template_action_reserved_qty" model="ir.actions.act_window">
            <field name="name">Template Reserved Qty </field>
            <field name="res_model">sale.order.line</field>
            <field name="type">ir.actions.act_window</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="sale.view_order_line_tree"/>
        </record>

        <record id="product_kanban_view_inherit_bi" model="ir.ui.view">
        <field name="name">bi.inherit.Product.product.kanban</field>
        <field name="inherit_id" ref="product.product_kanban_view" />
        <field name="model">product.product</field>
        <field name="arch" type="xml">
                <xpath expr="//div[@name='tags']" position="before">
                       <a name="%(action_reserved_qty)d" type="action">
                                         <field name="reserved_count"></field> Reserved
                                    </a>
                </xpath>
        </field>
        </record>

        <record id="product_template_kanban_view_inherit_bi" model="ir.ui.view">
        <field name="name">bi.inherit.Product.template.kanban</field>
        <field name="inherit_id" ref="product.product_template_kanban_view" />
        <field name="model">product.template</field>
        <field name="arch" type="xml">
                <xpath expr="//div[@name='product_lst_price']" position="after">
                       <a name="see_reserved_qty" type="object">
                                         <field name="reserved_count"></field> Reserved
                                    </a>
                </xpath>
        </field>
        </record>



